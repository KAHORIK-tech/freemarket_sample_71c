%header
  = render 'layouts/search-box'
.main_container
  %main.mypage-container
    = render 'side-bar'
    .mypage-content
      %section.mypage-tab-container
        %h2.mypage-tab-head
          出品した商品
        %ul.mypage-tabs
          %li.active
            %h3
              = link_to '出品中', '#tab-progress'
          %li
            %h3
              = link_to '売却済み', '#tab-completed'
        .tab-content
          %ul#tab-progress.tab-content__item-list.tab-pane.active
            %li
              =link_to '/users/items', class: 'tab-content__item-link' do
                %figure
                  = image_tag @image.image.to_s, size: '48x48', class: ''
                .tab-content__item-link__body
                  .tab-content__item-link__body--text
                    = @item.name
                  %div
                    %span.listing-item-count
                      %i.far.fa-clock 
                      %span 0
                    %span.listing-item-count
                      %i.far.fa-clock 
                      %span 0
                
          %ul#tab-completed.tab-content__item-list.tab-pane
            %li.tab-content__not-found
              過去に取引した商品がありません
      %ul.mypage-pager 
        %li.pager-prev.pager
          = link_to '#' do
            = icon('fas', 'angle-left')
        %li.pager-next.pager
          = link_to '#' do
            = icon('fas', 'angle-right')
          

= render 'layouts/footer'