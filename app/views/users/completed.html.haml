%header
  = render 'layouts/search-box'
.main_container
  %main.mypage-container
    = render 'side-bar'
    .mypage-content
      %section.mypage-tab-container
        %h2.mypage-tab-head
          出品した商品
        %ul.mypage-tabs
          %li.tab
            %h3
              = link_to '出品中', in_progress_user_url
          %li.tab.active
            %h3
              = link_to '売却済み', completed_user_url
        .tab-content
          %ul.tab-content__item-list.tab-pane
            %li.tab-content__not-found
              取引中の商品がありません
                
          %ul.tab-content__item-list.tab-pane.show
            %li.tab-content__not-found
              過去に取引した商品がありません
      %ul.mypage-pager 
        %li.pager-prev.pager
          = link_to '#' do
            = icon('fas', 'angle-left')
        %li.pager-next.pager
          = link_to '#' do
            = icon('fas', 'angle-right')
          

= render 'layouts/footer'


-#.tab-content__item-link__body
  -#.tab-content__item-link__body--text
    -#新機能実装しました。
  -#%time
    -#%i.far.fa-clock <span> 1日前</span>
  -#= icon( "fas", "angle-right")