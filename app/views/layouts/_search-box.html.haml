.header-wrap
  .header-top
    = link_to root_path, class: 'home-btn' do
      = image_tag 'logo/logo.png'
    .search-section
      = search_form_for(@q, url:search_items_path) do |f|
        = f.search_field :name_has_every_term, placeholder: "キーワードから探す", class: 'search-section__input-box'
        =f.button class:'search-section__submit-btn' do
          .serch-icon
            = image_tag 'icon/icon-search 1.png'
  .header-nav
    .header-nav__left-box
      = link_to '#', class: 'header-nav__left-box--category' do
        %figure
          .menu-icon
            = image_tag 'icon/icon_category.png', class: 'menu-icon__img'
        %span カテゴリー
      = link_to '#', class: 'header-nav__left-box--brand' do
        %figure
          .menu-icon
            = image_tag 'icon/icon_brand.png', class: 'menu-icon__img'
        %span ブランド
    .header-nav__right-box
      -if user_signed_in?
        = link_to user_likes_path(current_user.id), class: 'header-nav__right-box--likes' do
          %i.far.fa-heart.icon
          %span いいね！一覧
        = link_to '#', class: 'header-nav__right-box--notice' do
          %i.far.fa-bell.icon
          %span お知らせ
        = link_to '#', class: 'header-nav__right-box--todo' do
          %i.fas.fa-check.icon
          %span やることリスト
        = link_to user_path(current_user.id), class: 'header-nav__right-box--login' do
          %i.far.fa-smile.icon
          %span マイページ
      - else
        = link_to 'ログイン', new_user_session_path, class: 'header-nav__right-box--login'
        = link_to '新規会員登録', users_path, class: 'header-nav__right-box--signup'