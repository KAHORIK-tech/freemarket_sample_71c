%header
  = render "layouts/header"
.signup-main
  .signup-main__contents
    %h2.signup-main__head
      住所登録
    = form_with model: @user do |form|
      .signup-main__input
        .signup-main__form-group
          = form.label :family_name,"送付先氏名", class: "signup-main__label"
          %span.signup-main__require
            必須
          %br
          .signup-main__personal-name
            = form.text_field :family_name, placeholder: "例) 山田", class: "signup-main__field signup-main__field--side"
            = form.text_field :first_name, placeholder: "例) 彩", class: "signup-main__field"
          .add_address_ship_family_name.add_all
          .add_address_ship_first_name.add_all

        .signup-main__form-group
          = form.label :family_name_kana,"送付先氏名カナ", class: "signup-main__label"
          %span.signup-main__require
            必須
          %br
          .signup-main__personal-name
            = form.text_field :family_name_kana, placeholder: "例) ヤマダ", class: "signup-main__field signup-main__field--side"
            = form.text_field :first_name_kana, placeholder: "例) アヤ", class: "signup-main__field"
          .add_address_ship_family_name_kana.add_all
          .add_address_ship_first_name_kana.add_all

        .signup-main__form-group
          = form.label :post_code,"郵便番号", class: "signup-main__label"
          %span.signup-main__require
            必須
          %br
          = form.text_field :post_code, placeholder: "例) 123-4567", class: "signup-main__field"
        .add_address_postal_code.add_all

        .signup-main__form-group
          = form.label :prefecture,"都道府県", class: "signup-main__label"
          %span.signup-main__require
            必須
          %br
          = form.text_field :prefecture, placeholder: "東京都", class: "signup-main__field"
        .add_address_prefecture_id.add_all

        .signup-main__form-group
          = form.label :city,"市区町村", class: "signup-main__label"
          %span.signup-main__require
            必須
          %br
          = form.text_field :city, placeholder: "例) 東京都渋谷区", class: "signup-main__field"
        .add_address_municipality.add_all

        .signup-main__form-group
          = form.label :block,"番地", class: "signup-main__label"
          %span.signup-main__require
            必須
          %br
          = form.text_field :block, placeholder: "例) 渋谷1-1-1", class: "signup-main__field"
        .add_address_block_number.add_all

        .signup-main__form-group
          = form.label :building,"建物名", class: "signup-main__label"
          %span.signup-main__any
            任意
          %br
          = form.text_field :building, placeholder: "例) 渋谷ビル101", class: "signup-main__field"

        .signup-main__form-group
          = form.label :phone_number,"電話番号", class: "signup-main__label"
          %span.signup-main__require
            必須
          %br
          = form.text_field :phone_number, placeholder: "例) 09012345678", class: "signup-main__field"


        = form.submit "登録", class: "signup-main__submit"
= render "layouts/footer"