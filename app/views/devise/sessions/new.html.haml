%header
  = render "layouts/header"
%main.single-main-login
  .login-panel
    .login-no-account
      %p アカウントをお持ちでない方はこちら
      = link_to users_path, class: "btn-def--login" do
        新規会員登録
    .login-form-inner
      = link_to user_facebook_omniauth_authorize_path, method: :post, class: "btn-def--facebook" do
        %i.fab.fa-facebook-square
        %span<>
        Facebookでログイン
      = link_to user_google_oauth2_omniauth_authorize_path, method: :post, class: "btn-def--google" do
        %i.fab.fa-google
        %span<>
        Googleでログイン
      %button#seller.btn-default.btn-red 簡単ログイン(出品者)
      %button#buyer.btn-default.btn-red 簡単ログイン(購入者)
    .login-form-inner
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .form-group
          = f.email_field :email, {autofocus: true, autocomplete: "email", placeholder: "メールアドレス",class:'form-group__input'}
        .form-group
          = f.password_field :password,{autocomplete: "current-password",placeholder: "パスワード",class:'form-group__input',id:"password"}
        .form-group
          = f.submit 'ログイン', class: "btn-default btn-red", url: "root_path"
= render "layouts/footer"